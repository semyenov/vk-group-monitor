{
  "name": "vk-group-monitor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "bin": "./dist/cli.js",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "pkgroll",
    "start": "node ./dist/cli.js",
    "dev": "tsx watch ./src/cli.ts",
    "docker:build": "docker build -t vk-group-monitor .",
    "docker:run": "docker run -p 3000:3000 vk-group-monitor",
    "docker:dev": "docker run -p 3000:3000 -v $(pwd)/db:/app/db -v $(pwd)/config.yaml:/app/config.yaml vk-group-monitor",
    "docker:push": "docker push ghcr.io/semyenov/vk-group-monitor:latest"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@html-eslint/eslint-plugin": "^0.27.0",
    "@html-eslint/parser": "^0.27.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.15",
    "eslint": "^9.12.0",
    "eslint-plugin-vue": "^9.28.0",
    "globals": "^15.10.0",
    "mkdist": "^1.6.0",
    "pkgroll": "^2.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.7.2",
    "ajv": "^8.17.1",
    "consola": "^3.2.3",
    "h3": "^1.12.0",
    "h3-basic-auth": "^0.0.1",
    "js-yaml": "^4.1.0",
    "jsonrepair": "^3.8.1",
    "level": "^8.0.1",
    "listhen": "^1.8.0",
    "module-error": "^1.0.2",
    "node-fetch": "^3.3.2",
    "node-fetch-native": "^1.6.4",
    "pathe": "^1.1.2",
    "tailwindcss": "^3.4.13",
    "unstorage": "^1.12.0"
  },
  "packageManager": "yarn@4.5.0"
}
